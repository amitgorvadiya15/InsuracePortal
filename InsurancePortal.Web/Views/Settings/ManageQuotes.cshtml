@model InsurancePortal.Web.Models.ManageQoutesViewModel

@{
    ViewBag.Title = "ManageQuotes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Quote Templates
        <small>advanced templates</small>
    </h1>
    <ol class="breadcrumb">
        <li class="active">Quote Templates</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of Templates</h3>
                    <div style="float:right;">
                        <button id="btnShowModal" type="button" class="btn btn-primary">
                            Add New
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="dispaly" cellspacing="0" width="100%" id="tbltemplate">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TemplateList != null && Model.TemplateList.Count > 0)
                            {
                                foreach (var item in Model.TemplateList)
                                {
                                    <tr>
                                        <td>@item.TemplateName</td>
                                        <td>@item.TemplateName</td>
                                        <td class="center"><a href="@Url.Action("QuoteTemplate", "Settings", new { @tempId = item.TemplateID })" title="Quotes Template">Edit</a></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3">No record found.</td>
                                </tr>
                            }
                        </tbody>
                        
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


<div class="modal fade" tabindex="-1" id="loginModal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    ×
                </button>
                <h4 class="modal-title">Add Template</h4>
            </div>
            @Html.Action("AddTemplate", "Settings")
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#tbltemplate').DataTable();
        $("#btnShowModal").click(function () {
            $("#loginModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });
    });
</script>