@model InsurancePortal.Web.Models.ManageQoutesViewModel

@{
    ViewBag.Title = "ManageQuotes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("_AdminLeftPanel")
<div class="col-md-10">
    <div class="row">
        <div class="navbar navbar-default bootstrap-admin-navbar-thin">
            <ol class="breadcrumb bootstrap-admin-breadcrumb">
                
                <li class="active">Quotes Templates</li>
            </ol>
        </div>
    </div>
   
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">List of Templates</div>
            </div>
            <div class="bootstrap-admin-panel-content">
                <div class="row">
                    <div class="col-md-12" style="padding-bottom:15px;">
                        <div class="col-md-12 text-right">
                            @*<a href="javascript:void(0);" id="btnShowModal" class="btn btn-primary">Add New Question</a>*@
                            <button id="btnShowModal" type="button" class="btn btn-primary">
                                Add New
                            </button>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd gradeX">
                            <td>Business Template</td>
                            <td>Manage the Business Template</td>
                            <td class="center"><a href="@Url.Action("QuoteTemplate", "Settings")" title="Quotes Template">Edit</a></td>
                        </tr>
                        <tr class="even gradeC">
                            <td>Lanloard Insurance Template</td>
                            <td>Manage the Lanloard Insurance Template</td>
                            <td class="center"><a href="@Url.Action("QuoteTemplate", "Settings")" title="Template Sections">Edit</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<div class="modal fade" tabindex="-1" id="loginModal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    ×
                </button>
                <h4 class="modal-title">Add Template</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 form-group" style="float:left;">
                        <label class="col-md-3 control-label">Template Name</label>
                        <div class="col-md-9">
                            <input class="form-control" type="text" placeholder="Template Name here" id="inputUserName" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary button button4">Save</button>
                <button type="button" id="btnHideModal" class="btn btn-primary button button4">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#loginModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });
    });
</script>