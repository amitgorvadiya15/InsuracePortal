
@{
    ViewBag.Title = "QuoteTemplate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("_AdminLeftPanel")
<div class="col-md-10">
    <div class="row">
        <div class="navbar navbar-default bootstrap-admin-navbar-thin">
            <ol class="breadcrumb bootstrap-admin-breadcrumb">
                
                <li>
                    <a href="@Url.Action("ManageQuotes","Settings")">Manage Quotes</a>
                </li>
                <li class="active">Manage Quotes Template</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Template Details</div>
            </div>
            <div class="bootstrap-admin-panel-content">
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label class="col-md-2 control-label">Name</label>
                        <div class="col-md-10">
                            @Html.TextBox("txtname", "", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="padding-top:15px;">
                        <div class="col-md-12 text-right">
                            <a href="javascript:void(0);" class="btn btn-primary">Save Template</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">List of Tabs</div>
            </div>
            <div class="bootstrap-admin-panel-content">
                <table class="table table-striped table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd gradeX">
                            <td>Your Business</td>
                            <td>Your Business Tab</td>
                            <td class="center"><a href="@Url.Action("QuoteTabs", "Settings")" title="Quotes Template">Edit</a></td>
                        </tr>
                        <tr class="even gradeC">
                            <td>Your Employee</td>
                            <td>Your Employee Tab</td>
                            <td class="center"><a href="@Url.Action("QuoteTabs", "Settings")" title="Template Sections">Edit</a></td>
                        </tr>
                        <tr class="even gradeC">
                            <td>Cover Options</td>
                            <td>Cover Options Tab</td>
                            <td class="center"><a href="@Url.Action("QuoteTabs", "Settings")" title="Template Sections">Edit</a></td>
                        </tr>
                        <tr class="even gradeC">
                            <td>Business Questions</td>
                            <td>Business Questions Tab</td>
                            <td class="center"><a href="@Url.Action("QuoteTabs", "Settings")" title="Template Sections">Edit</a></td>
                        </tr>
                        <tr class="even gradeC">
                            <td>Agreements</td>
                            <td>Agreement Tab</td>
                            <td class="center"><a href="@Url.Action("QuoteTabs", "Settings")" title="Template Sections">Edit</a></td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
