@model InsurancePortal.Web.Models.TemplateModel
@{
    ViewBag.Title = "QuoteTemplate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.Partial("_AdminLeftPanel")
<div class="col-md-10">
    <div class="row">
        <div class="navbar navbar-default bootstrap-admin-navbar-thin">
            <ol class="breadcrumb bootstrap-admin-breadcrumb">

                <li>
                    <a href="@Url.Action("ManageQuotes","Settings")">Manage Quotes</a>
                </li>
                <li class="active">Manage Quotes Template</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Template Details</div>
            </div>

            <div class="bootstrap-admin-panel-content">
                @using (Html.BeginForm("AddTemplate", "Settings", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="col-md-2 control-label">Name</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.TemplateName, new { @class = "form-control" })
                            </div>
                            @Html.HiddenFor(model => model.TemplateID)
                            <div class="col-md-2 text-right">
                                <button type="submit" class="btn btn-primary button button4">Save</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">List of Tabs</div>
            </div>
            <div class="bootstrap-admin-panel-content">
                <div class="row">
                    <div class="col-md-12" style="padding-bottom:15px;">
                        <div class="col-md-12 text-right">
                            @*<a href="javascript:void(0);" id="btnShowModal" class="btn btn-primary">Add New Question</a>*@
                            <button id="btnShowModal" type="button" class="btn btn-primary">
                                Add New
                            </button>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered" id="example">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.QuotesTab != null)
                        {
                            foreach (InsurancePortal.Transport.TemplateTabViewModel item in ViewBag.QuotesTab)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.TabName</td>
                                    <td>@item.TabName</td>
                                    <td class="center"><a href="@Url.Action("QuoteTabs", "Settings", new { @tabId = item.TemplateTabID })" title="Quotes Template">Edit</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<div class="modal fade" tabindex="-1" id="loginModal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    ×
                </button>
                <h4 class="modal-title">Add Tab</h4>
            </div>
            @Html.Action("AddTemplateTab", "Settings", new { @TemplateId = Model.TemplateID })
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnShowModal").click(function () {
            $("#loginModal").modal('show');
        });

        $("#btnHideModal").click(function () {
            $("#loginModal").modal('hide');
        });
    });
</script>