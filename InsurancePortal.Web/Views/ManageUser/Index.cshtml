
@{
    ViewBag.Title = "User management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <h1>
        User Management
        <small>Manage the users</small>
    </h1>
    <ol class="breadcrumb">

        <li class="active">User Management</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of Users</h3>
                    <div style="float:right;">
                        <button id="btnShowModal" type="button" class="btn btn-primary">
                            Add New
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="dispaly" cellspacing="0" width="100%" id="tbltemplatetab">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email ID</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.UserList != null && ViewBag.UserList.Count > 0)
                            {
                                foreach (InsurancePortal.Transport.UserViewModel item in ViewBag.UserList)
                                {
                                    <tr>
                                        <td>@item.FirstName</td>
                                        <td>@item.LastName</td>
                                        <td>@item.EmailID</td>
                                        <td class="center"><a href="javascript:void(0);" title="Details">Details</a></td>
                                    </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" style="text-align:center;">No users found.</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<script type="text/javascript">
    $(document).ready(function () {
        $('#tbltemplatetab').DataTable();
    });
</script>